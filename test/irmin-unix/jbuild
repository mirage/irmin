(jbuild_version 1)

(library
 ((name      test_unix)
  (modules   (test_unix))
  (libraries (irmin-test test_fs test_git test_http irmin-unix))))

(executable
 ((name      test)
  (modules   (test))
  (libraries (checkseum.c test_unix))))

(alias
 ((name runtest)
  (package irmin-unix)
  (deps (test.exe))
  (action (chdir ${ROOT} (run ${exe:test.exe} -q --color=always)))))
