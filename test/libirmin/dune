(rule
 (alias  runtest)
 (package libirmin)
 (action
  (setenv DYLD_FALLBACK_LIBRARY_PATH ../../src/libirmin/lib
  (setenv LD_LIBRARY_PATH ../../src/libirmin/lib
   (run ./test.exe)))))

(rule
 (targets test.exe)
 (deps
  (file test.c)
  (file greatest.h)
  (package libirmin))
 (action
  (run %{cc} -I../../src/libirmin/lib -o test.exe test.c -L../../src/libirmin/lib -lirmin)))
