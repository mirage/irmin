(executables
 (names main layers)
 (public_names bench-pack bench-pack-layers)
 (modules main layers import)
 (package irmin-bench)
 (preprocess
  (pps ppx_deriving_yojson ppx_repr))
 (libraries irmin-pack irmin-layers.pack irmin-test.bench lwt unix cmdliner
   logs yojson ppx_deriving_yojson memtrace repr ppx_repr bench_common rusage))

(library
 (name bench_common)
 (modules bench_common)
 (libraries irmin-pack unix progress progress.unix uuidm))

(library
 (name irmin_traces)
 (modules trace_common trace_definitions trace_collection)
 (preprocess
  (pps ppx_repr ppx_deriving.enum))
 (libraries irmin irmin-pack unix lwt repr ppx_repr bentov mtime
   mtime.clock.os))

(executable
 (name tree)
 (modules tree)
 (preprocess
  (pps ppx_repr))
 (libraries irmin-pack irmin-layers.pack irmin-test.bench lwt unix cmdliner
   logs memtrace repr ppx_repr bench_common tezos-context-hash irmin_traces))

;; Require the executables to compile during tests

(rule
 (alias runtest)
 (package irmin-bench)
 (deps main.exe layers.exe tree.exe)
 (action (progn)))
