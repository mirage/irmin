(jbuild_version 1)

(library
 ((name      test_http)
  (modules   (test_http))
  (libraries (irmin-test test_mem test_git irmin-http))))

(executable
 ((name      test)
  (modules   (test))
  (libraries (checkseum.c digestif.c test_http))))

(alias
 ((name runtest)
  (package irmin-http)
  (deps (test.exe))
  (action (run ${exe:test.exe} -q --color=always))))
