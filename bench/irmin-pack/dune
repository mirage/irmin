(executables
 (names main)
 (public_names bench-pack)
 (modules main import)
 (package irmin-bench)
 (preprocess
  (pps ppx_deriving_yojson ppx_repr))
 (libraries irmin-pack irmin-test.bench lwt unix cmdliner logs yojson
   ppx_deriving_yojson memtrace repr ppx_repr bench_common rusage))

(library
 (name bench_common)
 (modules bench_common)
 (libraries irmin-pack unix progress progress.unix uuidm))

(library
 (name irmin_traces)
 (modules trace_common trace_definitions trace_collection trace_stat_summary
   trace_stat_summary_conf trace_stat_summary_utils trace_stat_summary_pp)
 (preprocess
  (pps ppx_repr ppx_deriving.enum))
 (libraries irmin irmin-pack unix lwt repr ppx_repr bentov mtime printbox
   printbox.unicode mtime.clock.os))

(executable
 (name tree)
 (modules tree)
 (preprocess
  (pps ppx_repr))
 (libraries irmin-pack irmin-test.bench lwt unix cmdliner logs memtrace repr
   ppx_repr bench_common tezos-context-hash irmin_traces))

(executable
 (name trace_stats)
 (modules trace_stats)
 (libraries cmdliner irmin_traces))

;; Require the executables to compile during tests

(alias
 (name runtest)
 (package irmin-bench)
 (deps main.exe tree.exe trace_stats.exe)
 (action (progn)))
