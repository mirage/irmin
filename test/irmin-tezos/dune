(executable
 (name irmin_fsck)
 (modules irmin_fsck)
 (libraries irmin-pack irmin-pack.unix irmin-tezos))

(executable
 (name generate)
 (modules generate)
 (libraries eio_main irmin-tezos irmin-pack irmin-pack.unix))

(rule
 (alias generate-cli-test-data)
 (targets data)
 (action
  (run %{exe:generate.exe})))

(cram
 (package irmin-tezos)
 (deps
  (file irmin_fsck.exe)
  (file data)
  (alias generate-cli-test-data)))

