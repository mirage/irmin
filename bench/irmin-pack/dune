(executable
 (name trace_stats)
 (modules trace_stats)
 (libraries cmdliner irmin_traces eio_main))

;; Require the executables to compile during tests

(rule
 (alias runtest)
 (package irmin-bench)
 (deps main.exe tree.exe trace_stats.exe)
 (action (progn)))
