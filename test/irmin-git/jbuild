(jbuild_version 1)

(library
 ((name      test_git)
  (modules   (test_git))
  (libraries (irmin-test irmin-git git-unix))))

(executable
 ((name      test)
  (modules   (test))
  (libraries (checkseum.c digestif.c test_git))))

(alias
 ((name runtest)
  (package irmin-git)
  (deps (test.exe))
  (action (run ${exe:test.exe} -q --color=always))))
