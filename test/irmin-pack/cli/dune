(executable
 (name irmin_fsck)
 (public_name irmin_fsck)
 (package irmin-pack)
 (modules irmin_fsck)
 (libraries irmin-pack irmin-pack.layered)
 (preprocess
  (pps ppx_irmin)))

(executable
 (name generate)
 (modules generate)
 (libraries irmin-pack irmin-pack.layered)
 (preprocess
  (pps ppx_irmin)))

(rule
 (alias generate-cli-test-data)
 (targets data)
 (action
  (run %{exe:generate.exe})))

(cram
 ;; TODO: attach these to the irmin-pack package
 (enabled_if
  (= %{profile} dev))
 (deps
  (package irmin-pack)
  (file irmin_fsck.exe)
  (file data)
  (alias generate-cli-test-data)))

(rule
 (alias runtest)
 (package irmin-pack)
 (action
  (progn
   (with-stdout-to
    irmin-fsck-help.txt.gen
    (run %{exe:irmin_fsck.exe} --help=plain))
   (diff? irmin-fsck-help.txt irmin-fsck-help.txt.gen))))
