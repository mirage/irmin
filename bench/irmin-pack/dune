(executables
 (names main)
 (public_names bench-pack)
 (modules main)
 (package irmin-bench)
 (preprocess
  (pps ppx_irmin.internal ppx_repr))
 (libraries
  irmin-pack
  irmin-test.bench
  unix
  cmdliner
  logs
  repr
  ppx_repr
  bench_common
  mtime
  rusage))

(library
 (name bench_common)
 (public_name irmin-bench.common)
 (modules bench_common import)
 (libraries irmin-pack irmin-pack.unix irmin-tezos unix progress uuidm)
 (preprocess
  (pps ppx_irmin.internal))
 (instrumentation
  (backend bisect_ppx)))

(library
 (name irmin_traces)
 (public_name irmin-bench.traces)
 (modules
  trace_common
  trace_definitions
  trace_collection
  trace_stat_summary
  trace_stat_summary_conf
  trace_stat_summary_utils
  trace_stat_summary_pp
  trace_replay
  trace_replay_intf
  tezos_history_metrics
  trace_stat_summary_cb)
 (preprocess
  (pps ppx_irmin.internal ppx_repr ppx_deriving.enum))
 (libraries
  irmin
  irmin-pack
  unix
  repr
  ppx_repr
  bentov
  mtime
  printbox
  printbox-text
  mtime.clock.os
  bench_common)
 (instrumentation
  (backend bisect_ppx)))

(executable
 (name tree)
 (modules tree)
 (preprocess
  (pps ppx_irmin.internal ppx_repr))
 (libraries
  irmin-pack
  irmin-pack.mem
  irmin-test.bench
